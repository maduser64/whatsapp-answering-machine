{
  "manifest_version": 2,
  "name": "Social Contracts - Whatsapp",
  "description": "Answering machine for Whatsapp",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.jpg",
    "default_popup": "popup.html"
  },
  "content_scripts" : [{
    "matches" : [ "*://web.whatsapp.com/*"],
    "js" : ["myScript.js"],
    "run_at": "document_end"
  }],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}